<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".opengl.DemoListOpenGLActivity"
    tools:showIn="@layout/activity_opengl_demo_list">

    <Button
        android:id="@+id/btn_shape_triangle"
        android:text="shape_triangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_shape_polygon"
        android:text="shape_polygon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_shape_triangle" />

    <Button
        android:id="@+id/btn_color_filter_gray"
        android:text="color_filter_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_shape_polygon" />

    <Button
        android:id="@+id/btn_color_filter_inverse"
        android:text="color_filter_inverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_color_filter_gray" />

    <Button
        android:id="@+id/btn_color_filter_lightup"
        android:text="color_filter_lightup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_color_filter_inverse" />

    <Button
        android:id="@+id/btn_position_filter_translate"
        android:text="position_filter_translate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_color_filter_lightup" />

    <Button
        android:id="@+id/btn_texture"
        android:text="texture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_position_filter_translate" />

    <Button
        android:id="@+id/btn_camera_preview"
        android:text="camera_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_texture" />

</androidx.constraintlayout.widget.ConstraintLayout>